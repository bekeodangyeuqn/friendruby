<% if user_signed_in? %>

  <h1>Friends</h1>

  <table class="table table-success table-striped table-hover table-bordered ">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Twitter</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @friends.each do |friend| %>
      <% if current_user == friend.user%>
        <tr>
          <td><%= link_to friend.first_name + ' ' + friend.last_name,friend %></td>
          <td><%= friend.email %></td>
          <td><%= friend.phone %></td>
          <td><%= friend.twitter %></td>
          <td><%= link_to 'Destroy', friend,class:"btn btn-outline-danger btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Friend', new_friend_path,
  class:"btn btn-primary" %>
<% else %>
  <h1>Hello world!</h1>
  This is my first website in Ruby on rails
<% end %>
